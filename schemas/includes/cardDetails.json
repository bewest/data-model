{
  "description": "User's card details",
  "properties": {
    "card": {
      "description": "Card type, i.e. Visa, Mastercard etc...",
      "required": true,
      "type": "string"
    },
    "cardNumber": {
      "description": "16 digit card number",
      "required": true,
      "type": "string",
      "maxLength": 16,
      "minLength":16
    },
    "expiryDate": {
      "description": "Date on which the card expires, format yyyy/mm/dd",
      "required": true,
      "type": "string"
    },
    "issueNumber": {
      "description": "Optional issue number if available",
      "type": "string",
      "maxLength": 3
    },
    "nameOnCard": {
      "description": "User's name as it appears on the card",
      "required": true,
      "type": "string"
    }
  }
}